<h1>Update Profile</h1>

<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<br>
<%= simple_form_for @user, url: profile_path(@user) do |form| %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :city %>
  <%= form.input :bio %>
  <%= form.input :birthday %>
  <%= form.input :photo %>
  <%= form.input :photo_cache, as: :hidden %>
  <%= form.submit %>
<% end %>
