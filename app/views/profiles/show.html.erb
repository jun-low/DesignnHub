<div class="main-container py-5">
  <div class="avatar-container">
    <%= cl_image_tag(@user.photo, class: "avatar-square") %>
  </div>

  <div class="bio-container">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <p><%= @user.job %></p>
    <p><i class="fas fa-map-marker-alt"></i><%= @user.city %></p>
    <p><%= @user.bio %></p>
    <a href="mailto:<%= @user.email %>" target="_blank" rel="noopener noreferrer" class="btn btn-primary">EMAIL</a>
    <div class="user-social-link">
      <a href="#"><i class="icon ion-md-globe"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fas fa-basketball-ball"></i></a>
      <a href="#"><i class="fab fa-facebook-f"></i></a>
    </div>
  </div>

  <div class="experience-container">
    <h3>Experiences:</h3>
    <ul class="timeline">
      <li class="timeline-event">
        <label class="timeline-event-icon"></label>
        <div class="timeline-event-copy">
          <p class="timeline-event-thumbnail">April 2019 - now</p>
          <h4>UI/UX Designer</h4>
          <p>Schwerpunkt Frontend Design</p>
        </div>
      </li>
      <li class="timeline-event">
        <label class="timeline-event-icon"></label>
        <div class="timeline-event-copy">
          <p class="timeline-event-thumbnail">October 2018 - March 2019</p>
          <h4>Freelancer</h4>
          <p>Geschäftsführerin Web-Studios</p>
        </div>
      </li>
      <li class="timeline-event">
        <label class="timeline-event-icon"></label>
        <div class="timeline-event-copy">
          <p class="timeline-event-thumbnail">April 2018 - September 2018</p>
          <h4>Layout Design Intern</h4>
          <p>Compass of Design</p>
        </div>
      </li>
    </ul>
  </div>
</div>



<i class="icon ion-ios-timer"></i>
<i class="icon ion-md-code"></i>
<i class="fas fa-chart-line"></i>
<i class="fab fa-sketch"></i>
<i class="fas fa-people-carry"></i>
