<!-- Modal -->
<div class="modal fade" id="jobApplicationModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content py-1 px-5">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">APPLY FOR JOB</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [job_post, job_application], method: :post do |form| %>
          <%= form.input :note, as: :text %>
      </div>
      <div class="modal-footer">
          <%= form.submit "APPLY", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
