<!-- Modal -->
<div class="modal fade" id="designModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content py-1 px-5">
      <div class="modal-header line-bottom">
        <h5 class="modal-title" id="exampleModalLabel">Add Design</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for design, method: :post do |form| %>
          <%= form.input :title %>
          <%= form.input :description %>
          <%= form.input :category, input_html: { class: 'select2' }, collection: ["Photography", "Graphic Design", "Illustraion","Logo", "Branding", "Typography", "UI/UX Design", "Paint", "Animation", "Product Design", "Web Design"] %>
          <%= form.simple_fields_for :design_design_tags do |tag| %>
              <%= tag.input :name, collection: DesignTag.all, label: "Tags", input_html: { class: 'select2' } %>
          <% end %>
          <%= form.input :photo, label: 'Design' %>
          <%= form.input :photo_cache, as: :hidden %>
      </div>
      <div class="modal-footer line-top">
          <%= form.submit "ADD DESIGN", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
