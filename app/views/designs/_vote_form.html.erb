<% if user_signed_in? %>
  <% if current_user.upvoted?(comment) == true %>
      <%=comment.upvotes %>
      <p>▲</p>
      <%= link_to "▼", downvote_comment_path(comment), method: :post %>
      <%=comment.downvotes %>
    <% elsif current_user.downvoted?(comment) == true %>
      <%=comment.upvotes %>
      <%= link_to "▲", upvote_comment_path(comment), method: :post %>
      <p>▼</p>
      <%= comment.downvotes %>
    <% else %>
      <%=comment.upvotes %>
      <%= link_to "▲", upvote_comment_path(comment), method: :post %>
      <%= link_to "▼", downvote_comment_path(comment), method: :post %>
      <%=comment.downvotes %>
  <% end %>
<% else %>
    <%=comment.upvotes %>
    <%= link_to "▲", new_user_registration_path %>
    <%= link_to "▼", new_user_registration_path %>
    <%=comment.downvotes %>
<% end %>
