<!-- Modal -->
<div class="modal fade" id="jobExperienceModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="width:800px;" role="document">
    <div class="modal-content py-1 px-5">
      <div class="modal-header line-bottom">
        <h5 class="modal-title" id="exampleModalLabel">Add Experience</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @new_job_experience, method: :post do |form| %>
          <%= form.input :title %>
          <%= form.input :description %>
          <%= form.input :location %>
          <%= form.input :start_date, as: :date, input_html: {class: 'select2'}, start_year: Date.today.year,
                              end_year: Date.today.year - 70,  discard_day: true,
                              order: [:month, :year] %>
          <%= form.input :end_date, as: :date, input_html: {class: 'select2'}, start_year: Date.today.year,
                              end_year: Date.today.year - 70,  discard_day: true,
                              order: [:month, :year] %>
      </div>
      <div class="modal-footer line-top">
          <%= form.submit "SAVE", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
