<%= @portfolios.each do |portfolio| %>
  <div class="portfolio-container">
    <div class="portfolio-slideshow">
      <div id="<%= portfolio.user.first_name %>'sPortfolio" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <%= portfolio.user.designs.each_with_index do |design, index| %>
            <% if index == 0 %>
              <div class="carousel-item active">
                <img class="d-block w-100" src="<%= cl_image_tag(design.photo, width: 600, height: 400) %>" alt="<%= index + 1 %> slide">
              </div>
            <% else %>
              <div class="carousel-item">
                <img class="d-block w-100" src="<%= cl_image_tag(design.photo, width: 600, height: 400) %>" alt="<%= index + 1 %> slide">
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#<%= portfolio.user.first_name %>'sPortfolio" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#<%= portfolio.user.first_name %>'sPortfolio" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
      <div class="portfolio-user">
          <%= link_to profile_path(portfolio.user) do %>
          <div class="infos">
            <div class="text-background">
              <div class="d-flex align-items-center">
                <% if portfolio.user.photo.present? %>
                  <%= cl_image_tag(portfolio.user.photo, class: "avatar-small", gravity: "faces") %>
                <% else %>
                  <%= image_tag (asset_path('avatar-default.png')), class: "avatar-small" %>
                <% end %>
                <div class="user-link">
                  <p><%= portfolio.user.first_name %></p>
                  <p><%= portfolio.user.last_name %></p>
                </div>
              </div>
              <div class="title-link"><%= link_to portfolio.description.truncate(30), portfolio_path(portfolio.id) %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
