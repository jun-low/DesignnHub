<div class="fluid-container">
  <div class="row" >
    <div class="col-12 col-xl-8" style="margin: 0; padding: 0;" >
      <div class="main-show-container">
        <div class="portfolio-slideshow mt-0">
          <div id="Portfolio<%= @portfolio.id %>" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <%= @portfolio.user.designs.each_with_index do |design, index| %>
                <% if index == 0 %>
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="<%= cloudinary_url(design.photo, { width: 600, height: 400, crop: "scale", dpr: 3.0}) %>" alt="<%= index + 1 %>slide">
                  </div>
                <% else %>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="<%= cloudinary_url(design.photo, { width: 600, height: 400, crop: "scale", dpr: 3.0}) %>" alt="<%= index + 1 %>slide">
                  </div>
                <% end %>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#Portfolio<%= @portfolio.id %>" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#Portfolio<%= @portfolio.id %>" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
      <div class="portfolio-description">
        <p class="portfolio-meta-description">
          <%= @portfolio.description %>
        </p>
        <%= link_to profile_path(@portfolio.user), class: "masonry-content" do %>
          <%= render partial: 'partials/author', locals: { user: @portfolio.user, created_at: @portfolio.created_at } %>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-xl-4 critique-container">
      <div class="overflow-auto critique-wrapper">
        <div class="critiques">
          <%= render 'critiques' %>
        </div>
      </div>
      <div class="new-critique">
        <%= render 'new_critique' %>
      </div>
    </div>

  </div>
</div>
