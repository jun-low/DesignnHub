<div class="modal fade" id="portfolioModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content py-1 px-5">
      <div class="portfolio-form">
        <div class="modal-header line-bottom">
          <h5 class="modal-title" id="exampleModalLabel">Post Portfolio</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <div class="modal-body">
          <%= simple_form_for portfolio, method: :post do |form| %>
          <%= form.input :description %>
        </div>
        <div class="modal-footer line-top">
          <%= form.submit "UPLOAD PORTFOLIO", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
