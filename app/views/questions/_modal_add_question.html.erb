<!-- Modal -->
<div class="modal fade" id="questionModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content py-1 px-5">
      <div class="portfolio-form">
        <div class="modal-header line-bottom">
          <h5 class="modal-title" id="exampleModalLabel">Ask Question | <%= link_to 'Upload Portfolio', new_question_path, remote: true, id: "upload-portfolio" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <div class="modal-body">
            <%= simple_form_for question, method: :post do |form| %>
              <%= form.input :content %>
              <%= form.simple_fields_for :question_question_tags do |tag| %>
                  <%= tag.input :name, collection: QuestionTag.all, label: "Tags", input_html: { class: 'select2' } %>
              <% end %>
              <%= form.input :photo, label: 'Image' %>
              <%= form.input :photo_cache, as: :hidden %>
          </div>
          <div class="modal-footer line-top">
            <%= form.submit "POST QUESTION", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
