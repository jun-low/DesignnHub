<div class="question-show d-flex">
  <div class="question-show-container">
    <div class="question-header">
      <div class="question">
        <h4><%= @question.content %></h4>
      </div>
      <% if @question.answers.count == 1 %>
        <p class="number-of-answers">1 Answer</p>
      <% else %>
        <p class="number-of-answers"><%= @question.answers.count %> Answers</p>
      <% end %>
    </div>
    <div class="answer-container">
      <%= render 'new_answer' %>
      <div class="answers">
        <%= render partial:'partials/answers', locals: { answers: @question.answers } %>
      </div>
    </div>
  </div>
  <div class="related-questions">
      <h6>Related Questions</h6>
      <% if @related_questions.count <= 6 %>
        <% @related_questions.each do |question| %>
          <%= link_to question.content.truncate(200), question_path(question), target: :_blank %>
          <br>
          <br>
        <% end %>
      <% else %>
        <% @related_questions.sample(6) do |question| %>
          <%= link_to question.content.truncate(200), question_path(question), target: :_blank %>
          <br>
          <br>
        <% end %>
      <% end %>
  </div>
</div>
