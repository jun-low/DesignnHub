<div class="modal-header line-bottom">
  <h5 class="modal-title" id="exampleModalLabel"><%= link_to 'Ask Question', new_question_path, remote: true, id: "ask-question" %> | Upload Portfolio</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= simple_form_for portfolio, method: :post do |form| %>
  <%= form.input :description %>
</div>
<div class="modal-footer line-top">
  <%= form.submit "UPLOAD PORTFOLIO", class: "btn btn-primary" %>
  <% end %>
</div>
