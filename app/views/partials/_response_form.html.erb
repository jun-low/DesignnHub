<%= simple_form_for [media, content, response] , method: :post do |form| %>
  <%= form.input :content, label: false, placeholder: "Reply..." %>
  <div class="text-right mb-3">
  <%= form.button :button, "Cancel", type: :reset, class: "btn btn-none small" %>
  <%= form.submit "Submit", class: "btn btn-primary small" %>
  </div>
<% end %>
